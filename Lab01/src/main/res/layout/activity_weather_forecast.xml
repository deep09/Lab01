<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack_4"
    tools:context="com.example.dipen.androidlabs.WeatherForecast">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorBlack">
    <ImageView
        android:id="@+id/ivCurrentWeather"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCity_Type"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCurrentTemp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:textSize="30dp"/>
    </LinearLayout>
</LinearLayout>

        <TextView
            android:id="@+id/tvMinTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack_1"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMaxTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/colorBlack_2"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvWindSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/colorBlack_3"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/pbDownloadImage"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack_4"
            android:visibility="invisible"/>

</LinearLayout>
