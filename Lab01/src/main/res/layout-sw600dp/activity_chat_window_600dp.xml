<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dipen.androidlabs.ChatWindow">

    <FrameLayout
        android:id="@+id/fr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/lv_ChatView"
        />

    <ListView
        android:id="@+id/lv_ChatView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/edt_Chat"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edt_Chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_Chat"
        android:layout_alignBottom="@+id/edt_Chat"
        android:layout_toEndOf="@+id/edt_Chat"
        android:text="@string/sendButton" />

</RelativeLayout>
